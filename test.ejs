<h1>Product List</h1>

<div class="row">
  <% product.forEach((item) => { %>
    <div class="col-sm-4">
      <div class="card mb-4">
        <img class="card-img-top" src="../product-images/<%= item.images[0]%> " alt="Product Image" style="width: 250px; height: 250px;">
        <div class="card-body">
          <h5 class="card-title"><%= item.name %></h5>
          <p class="card-text">Price: <%= item.price %></p>
          <p class="card-text">Description: <%= item.description %></p>

        </div>
      </div>
    </div>
  <% }) %>
</div>